{
  "name": "@qiwi/primitive-storage",
  "version": "1.4.6",
  "description": "Primitive storage for basic purposes",
  "main": "target/es5/index.js",
  "types": "target/es5/index.d.ts",
  "scripts": {
    "lint": "eslint 'src/**/*.{ts,js}'",
    "lint:fix": "yarn lint --fix",
    "clean": "rimraf target",
    "prebuild": "yarn clean && npm_config_yes=true npx buildstamp --git --out.path buildstamp.json",
    "build": "npm-run-all -p -l build:es5 build:es6 build:esnext build:ts build:libdef build:bundle docs && yarn build:esmfix",
    "build:es5": "mkdir -p target/es5 && tsc -p tsconfig.es5.json",
    "build:es6": "mkdir -p target/es6 && tsc -p tsconfig.es6.json",
    "build:esnext": "mkdirp target/esnext && tsc -p tsconfig.esnext.json",
    "build:bundle": "microbundle build -o target/bundle",
    "build:ts": "cp -r src/main/ts/ target/ts/",
    "build:libdef": "libdefkit --tsconfig=tsconfig.es5.json --tsconfig=tsconfig.es6.json --tsconfig=tsconfig.esnext.json",
    "build:esmfix": "yarn tsc-esm-fix --target=target/es6 --target=target/esnext --dirnameVar=false",
    "jest": "jest --config=jest.config.json --forceExit --detectOpenHandles",
    "test": "yarn lint && yarn jest && yarn test:depcheck && yarn test:depaudit",
    "test:deps": "npm-run-all -p -l test:depcheck test:depauditfix",
    "test:depcheck": "npm_config_yes=true npx depcheck --ignores tsc-esm-fix,tslib,@types/jest,@qiwi/libdefkit,coveralls,typedoc,@qiwi/esm,tsm",
    "test:depaudit": "yarn audit --level=moderate --groups=dependencies; [[ $? -ge 4 ]] && exit 1 || exit 0",
    "test:depauditfix": "npm_config_yes=true npx yarn-audit-fix --audit-level=moderate",
    "test:report": "yarn test && yarn coveralls:push",
    "coveralls:push": "cat ./coverage/lcov.info | npm_config_yes=true npx coveralls@3",
    "docs": "typedoc --options ./typedoc.json ./src/main/ts",
    "uglify": "for f in $(find target -name '*.js'); do short=${f%.js}; terser -c -m -o $short.js -- $f; done",
    "postupdate": "yarn && yarn build && yarn test"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:qiwi/primitive-storage.git"
  },
  "keywords": [
    "cache",
    "storage",
    "persistent storage",
    "in-memory storage"
  ],
  "author": "Anton Golub <mailbox@antongolub.ru>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/qiwi/primitive-storage/issues"
  },
  "homepage": "https://github.com/qiwi/primitive-storage#readme",
  "devDependencies": {
    "@qiwi/esm": "^1.1.8",
    "@qiwi/libdefkit": "^4.0.8",
    "@qiwi/npm-run-all": "^4.1.7",
    "@types/jest": "^29.2.2",
    "@types/node": "^18.11.9",
    "coveralls": "^3.1.1",
    "eslint": "^8.27.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-qiwi": "^1.17.8",
    "jest": "^29.2.2",
    "jest-localstorage-mock": "^2.4.22",
    "microbundle": "^0.15.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^29.0.3",
    "typedoc": "^0.23.20",
    "typescript": "^4.8.4"
  },
  "files": [
    "README.md",
    "CHANGELOG.md",
    "target"
  ],
  "dependencies": {
    "@qiwi/substrate": "^1.20.15",
    "push-it-to-the-limit": "^1.17.3",
    "tslib": "^2.4.1"
  }
}
